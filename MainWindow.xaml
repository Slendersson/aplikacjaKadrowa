<Window x:Class="kadrowa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kadrowa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="125" />
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="125"/>

            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="8">Dodaj</Button>
            <Button Grid.Column="1" Margin="8">Edytuj</Button>
            <Button Grid.Column="2" Margin="8">Zwolnij</Button>
            <ComboBox Grid.Column="3" Margin="8">
                <ComboBoxItem IsSelected="True">Wszyscy</ComboBoxItem>
                <ComboBoxItem>Aktualnie pracujący</ComboBoxItem>
                <ComboBoxItem>Byli pracownicy</ComboBoxItem>
            </ComboBox>


        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="439*"/>
                <ColumnDefinition Width="361*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dataGridMain" Grid.ColumnSpan="2" FontWeight="Bold" ItemsSource="{Binding}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding employeeId}"/>
                    <DataGridTextColumn Header="IMIĘ" Binding="{Binding employeeName}"/>
                    <DataGridTextColumn Header="NAZWISKO" Binding="{Binding employeeSurname}"/>
                    <DataGridTextColumn Header="ZAROBKI" Binding="{Binding employeeSalary}"/>
                    <DataGridTextColumn Header="DATA ZATRUDNIENIA" Binding="{Binding employeeDateOfEmployment}"/>
                    <DataGridTextColumn Header="DATA ZWOLNIENIA" Binding="{Binding employeeDateOfTermination}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
